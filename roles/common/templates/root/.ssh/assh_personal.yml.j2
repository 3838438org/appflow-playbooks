---

# file: /root/.ssh/assh_personal.yml

hosts:

  # BACKUP
  {{ conf_backup_host }}:
    Hostname: {{ conf_backup_hostname }}
    Aliases: backup
    Port: {{ conf_backup_port }}
    User: {{ conf_backup_user }}
    IdentityFile: /etc/borgmatic/id_rsa-backup
    UserKnownHostsFile: /dev/null
    StrictHostKeyChecking: no
